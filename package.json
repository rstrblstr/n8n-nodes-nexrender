{
  "name": "n8n-nodes-nexrender",
  "version": "0.0.6",
  "description": "automated After Effects production workflow",
  "keywords": [
    "n8n-community-node-package",
    "after effects",
    "commercial editing",
    "faceless youtube",
    "video automation"
  ],
  "license": "MIT",
  "homepage": "autogfx.x.ccroww.com",
  "author": {
    "name": "ccroww gfx consultation",
    "email": "autogfx@ccroww.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rstrblstr/n8n-nodes-nexrender.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.4",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "pnpm build && pnpm lint -c .eslintrc.prepublish.js nodes credentials package.json"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/NexrenderApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Nexrender/Nexrender.node.js"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "n8n-workflow": "*",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
